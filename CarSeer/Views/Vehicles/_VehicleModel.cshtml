@model CarSeer.ViewModels.VehicleModelVM

@if (Model.Results != null && Model.Results.Any())
{
    <table class="table table-hover table-striped">
        <thead>
            <tr class="table-info">
                <th scope="col">#</th>
                <th scope="col">Model ID</th>
                <th scope="col">Model Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Results != null)
            {
                var i = 1;
                @foreach (var item in Model.Results)
                {
                    <tr>
                        <th scope="row">@(i++)</th>
                        <td>@item.Model_ID</td>
                        <td>@item.Model_Name</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="row mt-4">
        <nav class="col-md-8" aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <button class="page-link" href="#" aria-label="Previous" onclick="loadPageModel(@(Model.CurrentPage - 1))" @(Model.CurrentPage == 1 ? "disabled" : "")>
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </button>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item">
                        <button class="page-link" href="#" onclick="loadPageModel(@i)" @(i == Model.CurrentPage ? "disabled" : "")>
                            @i
                        </button>
                    </li>
                }

                <li class="page-item">
                    <button class="page-link" href="#" aria-label="Next" onclick="loadPageModel(@(Model.CurrentPage + 1))" @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")>
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </button>
                </li>
            </ul>
        </nav>

        <div class="row col-md-4">
            <label class="col-md-6 mt-1" for="pageSize">Page Size:</label>
            <select class="form-select col-md-5" asp-for="PageSize" id="gridSizeModel" onchange="loadPageModel()" style="height: 35px;">
                <option value="10">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
            </select>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">No models found for the selected criteria.</div>
}
<script>
    function loadPageModel(CurrentPage) {
        let MakeId = document.getElementById("makeId").value;
        let ModelYear = document.getElementById("manufactureYear").value;
        let PageSize = document.getElementById("gridSizeModel").value;
        if (CurrentPage === undefined) {
            CurrentPage = @Model.CurrentPage;
        }
        $.ajax({
            type: 'POST',
            url: '@Url.Action("GetVehicleModelsGrid", "Vehicles")',
            data: { MakeId: MakeId, ModelYear: ModelYear, CurrentPage: CurrentPage, PageSize: PageSize },
            success: function (response) {
                $('#vehicleModelGridContainer').html(response);
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    }
</script>