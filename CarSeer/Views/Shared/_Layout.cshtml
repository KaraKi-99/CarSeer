<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Car Seer</title>
    <link href="~/lib/css/bootstrap.css" rel="stylesheet" >
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">Menu</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="@Url.Action("GetAllMakes", "Vehicles")" class="nav-link align-middle px-0">
                                <span class="ms-1 d-none d-sm-inline">Get All Makes</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("GetVehicleType", "Vehicles")" class="nav-link align-middle px-0">
                                <span class="ms-1 d-none d-sm-inline">Get Vehicle Type</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("GetVehicleModels", "Vehicles")" class="nav-link align-middle px-0">
                                <span class="ms-1 d-none d-sm-inline">Get Vehicles Model</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col">
                    @RenderBody()
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/lib/js/popper.js" ></script>
    <script type="text/javascript" src="~/lib/js/bootstrap.js"></script>
</body>
</html>
